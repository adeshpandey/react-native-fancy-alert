{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "lib": [
            "ESNext"
        ],
        "allowJs": true,
        "jsx": "react-native",
        "declaration": true,
        "outDir": "./lib",
        "rootDir": "./",
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src", "index.ts"],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}